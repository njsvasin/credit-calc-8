@import '../../../../styl/variables.styl'
@import '../../CRangeVariables'

.c-range-scale
  display none

  &__scale-item
    position absolute
    bottom 0
    padding $c-range-scale-padding
    transform translateX(-50%)
    font-size 10px
    color $color-grey-dark
    cursor pointer
    white-space nowrap

    &:first-child
      transform translateX(-($c-range-line-padding) - $c-range-scale-padding)

    &:last-child
      transform translateX($c-range-line-padding + $c-range-scale-padding)
      right 0
