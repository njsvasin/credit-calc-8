@import '../../../../styl/variables.styl'
@import '../../CRangeVariables'

.c-range-line
  position relative
  display block
  padding $c-range-click-vertical-line-padding 0
  cursor pointer

  &_maximum &
    &__right-padding::before
      background-color $color-blue

    &__filler
      border-radius 0

  &__inner
    position relative
    height $c-range-line-height

  &__left-padding
  &__right-padding
    position absolute
    top -($c-range-click-vertical-line-padding)
    width $c-range-line-padding
    height $c-range-line-height
    padding $c-range-click-vertical-line-padding 0

    &::before
      content ''
      display block
      width 100%
      height 100%

  &__left-padding
    left -($c-range-line-padding)

    &::before
      border-radius $c-range-line-height 0 0 $c-range-line-height
      background-color $color-blue

  &__right-padding
    right -($c-range-line-padding)

    &::before
      border-radius 0 $c-range-line-height $c-range-line-height 0

  &__filler
    position absolute
    width 0
    height 100%
    background-color $color-blue
    border-radius 0 $indent-1 $indent-1 0
